<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sign_toolbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:src="@drawable/left_arrow"
            android:tint="@color/colorBeer"
            android:layout_gravity="center"
            android:layout_weight="0.3"/>

        <ImageView
            android:id="@+id/register_logo_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_text_only"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_weight="0.7"/>

    </LinearLayout>
    <TextView
        style="@style/BottomFullButton"
        android:layout_alignParentBottom="true"
        android:text="@string/dont_have_account_sign_label"
        android:id="@+id/sign_button"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sign_toolbar"
        android:layout_above="@id/sign_button"/>



</RelativeLayout>