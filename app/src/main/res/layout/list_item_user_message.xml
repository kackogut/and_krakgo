<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_users_conversations_avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_user_logo_register"/>

    <TextView
        style="@style/TextLabelBigBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:text="Jan Kowalski"
        android:id="@+id/tv_users_display_name"
        android:layout_toRightOf="@id/civ_users_conversations_avatar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        tools:text="hejka co tam"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:layout_alignLeft="@id/tv_users_display_name"
        android:layout_below= "@id/tv_users_display_name"/>



</RelativeLayout>
    <View
        style="@style/separator"/>
</LinearLayout>