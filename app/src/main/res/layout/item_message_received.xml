<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_message_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_message_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_user_logo_register" />

    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/civ_message_avatar"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        tools:text="Andrew Smith" />

    <TextView
        android:id="@+id/tv_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/civ_message_avatar"
        android:background="@drawable/message_sent"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:textColor="@color/colorBackground"
        tools:text="Hi, how are you?" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_message_body"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/tv_message_body"
        android:lines="2"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        tools:text="11:40" />


</RelativeLayout>