<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_message_body"
        tools:text="Hi, how are you?"
        android:background="@drawable/rectangle_message"
        android:backgroundTint="@color/colorBeerDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:maxWidth="300dp"
        android:padding="8dp"
        android:textColor="@color/colorBackground"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/tv_message_time"
        tools:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_toStartOf="@id/tv_message_body"
        android:layout_marginStart="4dp"
        android:layout_alignTop="@id/tv_message_body" />

</RelativeLayout>